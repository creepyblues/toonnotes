{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "installCommand": "npm install --prefix apps/expo --legacy-peer-deps @vercel/node @google/generative-ai sharp",
  "buildCommand": "echo 'API functions only'",
  "outputDirectory": "public",
  "functions": {
    "apps/expo/api/*.ts": {
      "maxDuration": 60,
      "memory": 1024
    }
  },
  "rewrites": [
    { "source": "/api/:path*", "destination": "/apps/expo/api/:path*" }
  ]
}
